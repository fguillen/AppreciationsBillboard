<%= form_for [:admin, @appreciation] do |f| %>
  <%= render "/shared/form_errors", :object => f.object %>

  <fieldset>
    <legend><%= "Appreciation attributes" %></legend>
    <hr>

    <div class="form-group row">
      <%= f.label :message, :class => "col-sm-2 col-form-label text-right" %>

      <div class="col-sm-10">
        <%= f.text_field :message, :class => "form-control", :placeholder => t("activerecord.attributes.appreciation.message") %>
      </div>
    </div>

    <div class="form-group row">
      <div class="offset-sm-2 col-sm-10">
        <%= f.submit :class => "btn btn-primary" %>
      </div>
    </div>
  </fieldset>
<% end %>
